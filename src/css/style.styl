*
    margin 0
    padding 0
    

html,body
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    user-select none

.container 
    position absolute
    top 30px
    left 30px
    width auto
    height auto
    display flex
    justify-content center 
    align-items center 
    z-index 4
.filter 
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 2


.title 
    font-family 'Raleway', sans-serif
    color white
    font-size 1.5em
    font-weight 400
    opacity 0.9
